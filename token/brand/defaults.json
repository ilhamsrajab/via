        "hover": {
          "brand": {
            "$type": "boxShadow",
            "$value": "{structure-elevation.global.surface.default.raised}",
            "$description": "Bayangan yang sedikit lebih tinggi untuk tombol saat hover, menegaskan interaktivitas."
          }
        },
        "pressed": {
          "brand": {
            "$type": "boxShadow",
            "$value": "{structure-elevation.global.surface.default.raised}",
            "$description": "Bayangan redup saat tombol ditekan, menciptakan ilusi 'menyentuh permukaan'."
