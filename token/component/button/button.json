{
  "actions": {
    "button": {
      "structure": {
        "gap": {
          "$type": "spacing",
          "$value": "{structure-space-gap.action.container.default.standard}"
        },
        "icon-size": {
          "$type": "sizing",
          "$value": "{theme-sizing.scale.size.s}"
        },
        "min-width": {
          "$type": "sizing",
          "$value": "{theme-sizing.scale.size.4xl}"
        },
        "focus-ring": {
          "$type": "boxShadow",
          "$value": [
            {
              "x": "0",
              "y": "0",
              "blur": "0",
              "spread": "2",
              "color": "{theme-colors.mode.neutral.background.default}",
              "type": "dropShadow"
            },
            {
              "x": "0",
              "y": "0",
              "blur": "0",
              "spread": "4",
              "color": "{theme-colors.mode.neutral.border.high}",
              "type": "dropShadow"
            }
          ]
        },
        "shadow": {
          "$type": "boxShadow",
          "$value": "{structure-elevation.action.surface.focus.brand}"
        },
        "border-width": {
          "$type": "borderWidth",
          "$value": "{structure-border.action.container.default.brand}"
        },
        "radius": {
          "$type": "borderRadius",
          "$value": "{structure-radius.action.container.default.brand}"
        },
        "padding-s": {
          "$type": "spacing",
          "$value": "{theme-spacing.padding.2xs} {theme-spacing.padding.xs}"
        },
        "padding": {
          "$type": "spacing",
          "$value": "{structure-space.action.container.default.standard}"
        }
      },
      "primary": {
        "default": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.mode.background.high}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            },
            "opacity": {
              "$type": "opacity",
              "$value": "{theme-opacity.opacity.full}"
            }
          },
          "label": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.text.inverse}"
            },
            "text": {
              "$type": "typography",
              "$value": "{brand-text.subtitle.small}"
            }
          },
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.icon.inverse}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.background.medium}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            }
          }
        },
        "disabled": {
          "container": {
            "opacity": {
              "$type": "opacity",
              "$value": "{theme-opacity.opacity.disabled}"
            }
          }
        }
      },
      "destructive": {
        "default": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.background.high}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.border.default}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.background.medium}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.border.default}"
            }
          }
        }
      },
      "secondary": {
        "default": {
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.icon.default}"
            }
          },
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.background.default}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            }
          },
          "label": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.text.default}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.background.low}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            }
          }
        }
      },
      "outline": {
        "default": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.background.default}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            }
          },
          "label": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.text.default}"
            }
          },
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.icon.default}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.background.low}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.low}"
            }
          }
        }
      },
      "ghost": {
        "default": {
          "label": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.text.default}"
            }
          },
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.icon.default}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.background.low}"
            }
          }
        }
      },
      "inverted": {
        "default": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.background.default}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.inverse}"
            }
          },
          "label": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.text.default}"
            }
          },
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.icon.default}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.background.low}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.inverse}"
            }
          }
        }
      }
    }
  }
}