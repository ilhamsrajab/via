{
  "actions": {
    "button": {
      "primary": {
        "default": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.background.default}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            },
            "border-width": {
              "$type": "borderWidth",
              "$value": "{dimensions.border-width.m}"
            },
            "border-radius-none": {
              "$type": "borderRadius",
              "$value": "{theme-radius.border.radius.none}"
            },
            "border-radius-m": {
              "$type": "borderRadius",
              "$value": "{dimensions.radius.m}"
            },
            "border-radius-full": {
              "$type": "borderRadius",
              "$value": "{dimensions.radius.full}"
            },
            "opacity": {
              "$type": "opacity",
              "$value": "{theme-opacity.opacity.full}"
            },
            "padding-m": {
              "$type": "spacing",
              "$value": "{theme-spacing.padding.xs} {theme-spacing.padding.s}"
            },
            "padding-s": {
              "$type": "spacing",
              "$value": "{theme-spacing.padding.2xs} {theme-spacing.padding.xs}"
            },
            "padding-l": {
              "$type": "spacing",
              "$value": "{theme-spacing.padding.s} {theme-spacing.padding.m}"
            },
            "gap": {
              "$type": "spacing",
              "$value": "{theme-spacing.padding.3xs}"
            }
          },
          "label": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.text.inverse}"
            },
            "text": {
              "$type": "typography",
              "$value": "{brand-text.subtitle.small}"
            }
          },
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{brand-colors.icon.inverse}"
            },
            "size": {
              "$type": "sizing",
              "$value": "{theme-sizing.scale.size.s}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{brand-colors.background.medium}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{brand-colors.border.default}"
            }
          }
        },
        "disabled": {
          "container": {
            "opacity": {
              "$type": "opacity",
              "$value": "{theme-opacity.opacity.disabled}"
            }
          }
        },
        "focus": {
          "focus-ring": {
            "color": {
              "$type": "boxShadow",
              "$value": [
                {
                  "x": "0",
                  "y": "0",
                  "blur": "0",
                  "spread": "2",
                  "color": "{theme-colors.mode.neutral.background.default}",
                  "type": "dropShadow"
                },
                {
                  "x": "0",
                  "y": "0",
                  "blur": "0",
                  "spread": "4",
                  "color": "{theme-colors.mode.neutral.border.high}",
                  "type": "dropShadow"
                }
              ]
            }
          }
        }
      },
      "destructive": {
        "default": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.background.high}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.border.default}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.background.medium}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.danger.border.default}"
            }
          }
        }
      },
      "secondary": {
        "default": {
          "icon": {
            "color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.icon.high}"
            }
          },
          "container": {
            "border-width": {
              "$type": "borderWidth",
              "$value": "{dimensions.border-width.m}"
            },
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.background.low}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.border.low}"
            }
          },
          "label": {
            "color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.text.high}"
            }
          }
        },
        "hover": {
          "container": {
            "background-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.background.medium}"
            },
            "border-color": {
              "$type": "color",
              "$value": "{theme-colors.mode.neutral.border.medium}"
            }
          }
        }
      }
    }
  }
}